<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_medium">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/shopify_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/congratulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_xlarge"
            android:text="@string/congratulations"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/text_size_xlarge"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/total_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_padding_small"
            android:gravity="center"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_large"
            tools:text="Napoleon Batz has spent $185.44 at your store!"/>

        <TextView
            android:id="@+id/product_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_large"
            tools:text="You have sold 8 Awesome Bronze Bag(s)!"/>

    </LinearLayout>

</LinearLayout>
